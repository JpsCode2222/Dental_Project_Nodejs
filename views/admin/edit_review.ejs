<%- include('navbar.ejs')%>
<form action="/admin/update_review" method="post" enctype="multipart/form-data">
  <div class="container-fluid p-5 bg-white">
    <div class="row">
      <div class="col-md-12">
        <h3 class="text-primary">Edit Reviews</h3>
      </div>
      <div class="col-md-4 mt-3">
        Choose Image
        <input type="file" name="review_img" class="form-control" />
        <input
          type="hidden"
          value="<%=info.review_id%>"
          name="review_id"
          id=""
        />
        <img src="/img/<%=info.review_img%>" width="100%" alt="" />
      </div>
      <div class="col-md-4 mt-3">
        Enter Name <sup style="color: red">*</sup>
        <input
          type="text"
          value="<%=info.review_name%>"
          required
          name="review_name"
          class="form-control"
        />
      </div>
      <div class="col-md-4 mt-3">
        Review Information <sup style="color: red">*</sup>
        <textarea name="review_info" required class="form-control">
<%=info.review_info%></textarea
        >
      </div>
      <div class="col-md-12 text-center mt-3">
        <button class="btn btn-primary">Update Review</button>
      </div>
    </div>
  </div>
</form>
<%- include('footer.ejs')%>
