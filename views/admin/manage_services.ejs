<%- include('navbar.ejs') %>
<form action="/admin/save_service" method="post" enctype="multipart/form-data">
  <div class="container-fluid bg-white p-3">
    <div class="row">
      <div class="col-md-12">
        <h3 class="text-primary">Manage Services</h3>
      </div>
      <div class="col-md-4 mt-3">
        Service Name
        <input type="text" name="service_name" required class="form-control" />
      </div>
      <div class="col-md-4 mt-3">
        Service Image
        <input type="file" name="service_img" required class="form-control" />
      </div>
      <div class="col-md-4 mt-3">
        Service Price
        <input type="number" name="service_price" required class="form-control" />
      </div>
      <div class="col-md-4 mt-3">
        Key Point 1
        <input type="text" name="key_point1" required class="form-control" />
      </div>
      <div class="col-md-4 mt-3">
        Key Point 2
        <input type="text" name="key_point2" required class="form-control" />
      </div>
      <div class="col-md-4 mt-3">
        Key Point 3
        <input type="text" name="key_point3" required class="form-control" />
      </div>
      <div class="col-md-12 mt-4 text-center">
        <button class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</form>
<div class="container-fluid bg-white p-3">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-sm">
        <tr>
          <th>SN</th>
          <th>SN</th>
          <th>Service Name</th>
          <th>Service Image</th>
        </tr>
        <%for(var i=0; i<service.length;i++){%>
            <tr>
                <td>
                    <a href="/admin/edit_service/<%=service[i].service_id%>"><button class="btn btn-sm btn-primary">Edit</button></a>
                    <a href="/admin/delete_service/<%=service[i].service_id%>"><button class="btn btn-sm btn-danger">Delete</button></a>
                </td>
                <td><%=i+1%></td>
                <td><%=service[i].service_name%></td>
                <td><img src="/img/<%=service[i].service_img%>" width="150px" alt="" />
                </td>
            </tr>
        <%}%>
      </table>
    </div>
  </div>
</div>
<%- include('footer.ejs') %>
