<%- include('navbar.ejs') %>
<form action="/admin/save_opening_hours" method="post">
  <div class="container bg-white">
    <div class="row">
      <div class="col-12 mt-3">
        <h3 class="fw-bold text-primary mt-2">Opening Hours</h3>
      </div>
      <div class="col-6 mt-3">
        Enter Day
        <input type="text" name="day" class="form-control" />
      </div>
      <div class="col-6 mt-3">
        Enter Time
        <input type="text" name="time" class="form-control" />
      </div>
      <div class="col-12 mt-3 text-center">
        <button class="btn btn-primary">Save Information</button>
      </div>
      <div class="col-12 mt-3 text-center">
        <table border="1" class="table table-sm table-striped">
          <tr>
            <th>Edit</th>
            <th>SN</th>
            <th>Day</th>
            <th>Time</th>
          </tr>
          <% for(var i=0; i<data.length; i++) {%>
            <tr>
                <td>
                    <a href="/admin/edit_opening_hours/<%=data[i].opening_hours_id%>" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/admin/delete_opening_hours/<%=data[i].opening_hours_id%>" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td><%=i+1%></td>
                <td><%=data[i].day%></td>
                <td><%=data[i].time%></td>
            </tr>
          <% } %>
        </table>
      </div>
    </div>
  </div>
</form>
<%- include('footer.ejs') %>
