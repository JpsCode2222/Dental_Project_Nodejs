<%- include('navbar') %>
<form action="/admin/save_basic_info" method="post">
  <div class="container-fluid bg-white p-3">
    <div class="row">
      <div class="col-md-12">
        <h3 class="fw-bold text-primary">Basic Infomation Form</h3>
      </div>
      <div class="col-md-3 mt-3">
        Mobile No
        <input
          type="text"
          name="mobile"
          value="<%= info.mobile %>"
          class="form-control"
        />
      </div>
      <div class="col-md-3 mt-3">
        Email Id
        <input
          type="text"
          name="email_id"
          value="<%= info.email_id %>"
          class="form-control"
        />
      </div>
      <div class="col-md-6 mt-3">
        Address
        <input
          type="text"
          name="address"
          value="<%= info.address %>"
          class="form-control"
        />
      </div>
      <div class="col mt-3">
        Twitter Link
        <input
          type="text"
          name="twitter_link"
          value="<%= info.twitter_link %>"
          class="form-control"
        />
      </div>
      <div class="col mt-3">
        Facebook Link
        <input
          type="text"
          name="facebook_link"
          value="<%= info.facebook_link %>"
          class="form-control"
        />
      </div>
      <div class="col mt-3">
        LinkedIn Link
        <input
          type="text"
          name="linkedin_link"
          value="<%= info.linkedin_link %>"
          class="form-control"
        />
      </div>
      <div class="col mt-3">
        Instagram Link
        <input
          type="text"
          name="instagram_link"
          value="<%= info.instagram_link %>"
          class="form-control"
        />
      </div>
      <div class="col mt-3">
        Google Map Link
        <input
          type="text"
          name="map_link"
          value="<%= info.map_link %>"
          class="form-control"
        />
      </div>
      <div class="col-12 mt-3">
        Heading
        <input
          type="text"
          name="heading"
          value="<%= info.heading %>"
          class="form-control"
        />
      </div>
      <div class="col-12 mt-3 text-center">
        <button class="btn btn-primary">Save Information</button>
      </div>
    </div>
  </div>
</form>
<%- include('footer') %>
